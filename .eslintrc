{
  "extends": ["prettier", "airbnb", "prettier/react"],
  "plugins": ["prettier"],
  "parser": "babel-eslint",
  "parserOptions": {
      "ecmaVersion": 6,
      "sourceType": "module",
      "ecmaFeatures": {
        "impliedStrict": true,
        "jsx": true
        }
    },
  "rules": {
			"semi": ["error", "always"],
			"no-tabs": "off",
      "quotes": [0, "double"],
      "no-underscore-dangle": "off",
      "react/jsx-filename-extension": [1, { "extensions": [".js", ".jsx"] }],
    },
  "env": {
    "browser": true,
    "node": true,
    "es6": true
    }
}